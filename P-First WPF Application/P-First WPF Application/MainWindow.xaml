<Window x:Class="P_First_WPF_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_First_WPF_Application"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF476669">
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="389,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtName_TextChanged"/>
        <TextBox x:Name="txtBday" HorizontalAlignment="Left" Height="23" Margin="389,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtBday_TextChanged"/>
        <Label x:Name="labelbday" Content="Enter Birthday here" HorizontalAlignment="Left" Margin="255,203,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelName" Content="Enter Name here" HorizontalAlignment="Left" Margin="255,145,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAge" Content="Button" HorizontalAlignment="Left" Margin="641,171,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Background="#FFEB3B3B" MouseEnter="Button_MouseEnter"/>
    </Grid>
</Window>
